<Gerenciador>:
    Screen:
        name: 'main'
        Button:
            text: 'Ver tarefas Main'
            on_release: root.current = 'tarefas'

    Tarefas:
        name: 'tarefas'

<Tarefas>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id: texto
                font_size: 30
            Button:
                text: '+'
                size_hint_x: None
                width: 60
                on_release: root.addWidget()

        ScrollView:
            BoxLayout:
                id:box
                orientation: 'vertical'
                size_hint_y: None
                height:self.minimum_height
        Button:
            text: 'Fechar'
            size_hint_y: None
            height: 30
            on_release: app.root.current = 'main'

<Tarefa>:
    size_hint_y:None
    height:200
    Label:
        id: label
        height: 200
        font_size: 30
    Button:
        text: 'X'
        size_hint_x: None
        width:60
        on_release:app.root.get_screen('tarefas').ids.box.remove_widget(root)